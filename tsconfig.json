{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"declaration": false,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"moduleResolution": "node",
		"lib": ["ESNext"],
		"resolveJsonModule": true,
		"types": ["bun-types"]
	},
	"include": ["src"]
}
